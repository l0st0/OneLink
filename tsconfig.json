{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/names/main": [".dfx/local/canisters/names"],
      "@/names/main/types": [".dfx/local/canisters/names/names.did"],
      "@/analytics/main": [".dfx/local/canisters/analytics"],
      "@/analytics/main/types": [".dfx/local/canisters/analytics/analytics.did"],
      "@/hooks": ["src/frontend/hooks/index.ts"],
      "@/store": ["src/frontend/store/index.ts"],
      "@/utils": ["src/frontend/utils/index.ts"],

      "@/views": ["src/frontend/views/index.tsx"],
      "@/features": ["src/frontend/features/index.ts"],
      "@/layouts": ["src/frontend/layouts/index.ts"],
      "@/components": ["src/frontend/components/index.ts"],

      "@/types": ["src/frontend/types/index.ts"],
      "@/styles": ["src/frontend/styles/index.ts"],
      "@/data/*": ["src/frontend/data/*"],
      "@/assets/*": ["src/frontend/assets/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/frontend"]
}
